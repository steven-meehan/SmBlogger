<% if (item.tags && item.tags.length){ %>
    <%
        var tags = [];
        item.tags.forEach(function(tag){
            tags.push('<a href="' + config.root + tag.path + '" title="' + tag.name + '">#' + tag.name + '</a>');
        });
    %>
    <div class="sm-blogger-post-tags">
        <span class="fas fa-tags"></span>
        <%- tags.join(' ') %>
    </div>
<% } %>